@model IEnumerable<MediCare_Hub.Models.Hospital>

@{
    ViewData["Title"] = "Hospitals Details";
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
        <h2 class="mb-3 mb-md-0">Hospitals Details</h2>
        <a asp-action="Add" class="btn btn-primary btn-lg">+ Add Hospital</a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">City</th>
                            <th scope="col">Address</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.City</td>
                                <td>@item.Address</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id"
                                        class="btn btn-outline-success btn-sm me-2">Update</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Are you sure to delete hospital: @item.Name?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
