<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCare Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediCare_Hub.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-3 d-flex align-items-center gap-1" asp-area="" asp-controller="Home"
                    asp-action="Index">
                    <span style="color:#181A20;">MediCare</span><span style="color:#4D77FF;">Hub</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-lg-4 gap-2 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Index">Doctor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#review">Review</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2 ms-lg-4">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="d-flex align-items-center gap-2 px-3 py-1 bg-light rounded-pill dropdown-toggle text-decoration-none"
                                    href="#" id="userDropdown" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#4D77FF"
                                        viewBox="0 0 24 24">
                                        <circle cx="12" cy="8" r="4" />
                                        <path d="M12 14c-4.418 0-8 1.79-8 4v2h16v-2c0-2.21-3.582-4-8-4z" />
                                    </svg>
                                    <span class="fw-semibold" style="color:#181A20;">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity"
                                            asp-page="/Account/Manage/Index">Settings</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout"
                                            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                                            method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login"
                                class="btn btn-link px-3 text-decoration-none">Sign In</a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary px-4 fw-semibold"
                                style="background:#4D77FF; border:none; border-radius:10px;">Sign Up</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer pt-5 pb-4" style="background:#181A20; color:#fff;">
        <div class="container">
            <div class="row gy-4 align-items-start">
                <div class="col-12 col-md-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="fw-bold fs-3" style="color:#fff;">MediCare</span><span class="fw-bold fs-3 ms-1"
                            style="color:#4D77FF;">Hub</span>
                    </div>
                    <p class="mb-0" style="color:#d1d1d1; font-size:1rem;">This free App provides a solution to your
                        health needs by offering you a one-stop access to complete information about various medical
                        checkups. This App carries simple tips and advice to help you maintain a healthy lifestyle.</p>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold mb-3" style="color:#fff;">Overview</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Checking
                                Health</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Find Doctor</a>
                        </li>
                        <li><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Make a Schedule</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold mb-3" style="color:#fff;">Company</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Home</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">About</a></li>
                        <li><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Services</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold mb-3" style="color:#fff;">Explore</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Terms &amp;
                                Conds</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Privacy
                                Police</a></li>
                        <li><a href="#" class="text-decoration-none" style="color:#d1d1d1;">Cookies</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold mb-3" style="color:#fff;">Social Media</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white fs-4" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-4" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-4" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
