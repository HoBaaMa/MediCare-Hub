@{
    ViewData["Title"] = "Home Page";
}

<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700;800&display=swap" rel="stylesheet">

<section class="hero-section container-fluid px-0">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                <h1 class="hero-headline mb-4">
                    Medical Care Now<br />
                    Simplified For <span class="hero-highlight">Everyone</span>
                </h1>
                <div class="hero-desc mb-4">
                    Health carely is a new way to get health insurance quotes. We offer tools similar to those provided
                    by insurance companies for free and prices are based on donations and not restrictive health plan
                    networks.
                </div>
                <a href="#contact" class="hero-btn">Contact Us</a>
            </div>
            <div class="col-lg-6 col-12 hero-img-col position-relative">
                <div class="hero-bg-shape"></div>
                <img src="~/img/female doctor_fococlipping_removed 1.png" alt="Female Doctor"
                    class="hero-img-main img-fluid" style="position: relative; z-index: 2; left: 30px;" />
                <div class="doctor-card shadow" style="left: 220px; bottom: 60px;">
                    <img src="~/img/female doctor logo.png" alt="Dr. Shimanta" class="doctor-card-img" />
                    <div>
                        <p class="doctor-card-title mb-1">Dr. Shimanta</p>
                        <p class="doctor-card-desc mb-2">Skin Specialist</p>
                        <a href="#" class="doctor-card-btn">Make Schedule</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
