@{
    ViewData["Title"] = "Home Page";
}

<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700;800&display=swap" rel="stylesheet">

<section class="hero-section container-fluid px-0">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                <h1 class="hero-headline mb-4">
                    Medical Care Now<br />
                    Simplified For <span class="hero-highlight">Everyone</span>
                </h1>
                <div class="hero-desc mb-4">
                    Health carely is a new way to get health insurance quotes. We offer tools similar to those provided
                    by insurance companies for free and prices are based on donations and not restrictive health plan
                    networks.
                </div>
                <a href="#contact" class="hero-btn">Contact Us</a>
            </div>
            <div class="col-lg-6 col-12 hero-img-col position-relative">
                <div class="hero-bg-shape"></div>
                <img src="~/img/female doctor_fococlipping_removed 1.png" alt="Female Doctor"
                    class="hero-img-main img-fluid" style="position: relative; z-index: 2; left: 30px;" />
                <div class="doctor-card shadow" style="left: 220px; bottom: 60px;">
                    <img src="~/img/female doctor logo.png" alt="Dr. Shimanta" class="doctor-card-img" />
                    <div>
                        <p class="doctor-card-title mb-1">Dr. Shimanta</p>
                        <p class="doctor-card-desc mb-2">Skin Specialist</p>
                        <a href="#" class="doctor-card-btn">Make Schedule</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="solutions-section py-5">
    <div class="container">
        <div class="text-center mb-4">
            <span class="text-primary fw-semibold" style="color: #4D77FF;">Fast Solutions</span>
            <h2 class="fw-bold mt-2 mb-5" style="font-size:2.2rem;">step by step to get your solutions</h2>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-12 col-md-6 col-lg-3">
                <div
                    class="solution-card h-100 p-4 text-center bg-white rounded-4 shadow-sm border-0 position-relative">
                    <div class="solution-icon mb-3 mx-auto">
                        <img src="~/img/Search.png" alt="Check health complaints" width="40" height="40" />
                    </div>
                    <h5 class="fw-bold mb-2">Check health complaints</h5>
                    <p class="text-muted mb-0">Check the disease so you can easily choose the right specialist.</p>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div
                    class="solution-card h-100 p-4 text-center bg-white rounded-4 shadow-sm border-0 position-relative">
                    <div class="solution-icon mb-3 mx-auto">
                        <img src="~/img/Profile.png" alt="Choose doctor Specialist" width="40" height="40" />
                    </div>
                    <h5 class="fw-bold mb-2">Choose doctor Specialist</h5>
                    <p class="text-muted mb-0">Choose a specialist according to your disease complaints</p>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div
                    class="solution-card h-100 p-4 text-center bg-white rounded-4 shadow-sm border-0 position-relative">
                    <div class="solution-icon mb-3 mx-auto">
                        <img src="~/img/Calendar.png" alt="Make a Schedule" width="40" height="40" />
                    </div>
                    <h5 class="fw-bold mb-2">Make a Schedule</h5>
                    <p class="text-muted mb-0">Make a schedule with the doctor concerned so you can start the
                        examination</p>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div
                    class="solution-card h-100 p-4 text-center bg-white rounded-4 shadow-sm border-0 position-relative">
                    <div class="solution-icon mb-3 mx-auto">
                        <img src="~/img/Star.png" alt="Get your Solutions" width="40" height="40" />
                    </div>
                    <h5 class="fw-bold mb-2">Get your Solutions</h5>
                    <p class="text-muted mb-0">After conducting an examination with a specialist we can help find the
                        right healing method</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="find-doctor-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <span class="text-primary fw-semibold mb-2 d-block" style="color: #4D77FF;">Find Doctor</span>
                <h2 class="fw-bold mb-4" style="font-size:2.2rem;">Find the right doctor according<br>to your complaint
                </h2>
                <p class="text-muted mb-4" style="max-width: 500px;">HealthCare.ly is a free, health app that goes
                    beyond matching you with doctors. It actively helps you find the right doctor based on your medical
                    and personal needs and connects you with your HealthCarely community for ongoing support throughout
                    your journey to healthier living.</p>
                <ul class="list-unstyled mb-4">
                    <li class="d-flex align-items-center mb-2">
                        <span class="checkmark-icon d-inline-flex align-items-center justify-content-center me-2">
                            <svg width="24" height="24" fill="none">
                                <circle cx="12" cy="12" r="12" fill="#4D77FF" />
                                <path d="M7 13l3 3 7-7" stroke="#fff" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                            </svg>
                        </span>
                        <span class="fw-semibold">100% free app designed to help you find the right doctor for
                            you.</span>
                    </li>
                    <li class="d-flex align-items-center mb-2">
                        <span class="checkmark-icon d-inline-flex align-items-center justify-content-center me-2">
                            <svg width="24" height="24" fill="none">
                                <circle cx="12" cy="12" r="12" fill="#4D77FF" />
                                <path d="M7 13l3 3 7-7" stroke="#fff" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                            </svg>
                        </span>
                        <span class="fw-semibold">Available 900 doctors specialist</span>
                    </li>
                </ul>
                <a href="#" class="btn btn-primary px-4 py-2 fw-semibold"
                    style="background:#4D77FF; border:none; border-radius:10px; font-size:1.1rem;">See the Doctors</a>
            </div>
            <div class="col-lg-6 d-flex justify-content-center align-items-center position-relative">
                <div class="find-doctor-bg"></div>
                <img src="~/img/female-doctor_fococlipping_removed 1.png" alt="Find Doctor"
                    class="find-doctor-img img-fluid position-relative"
                    style="z-index:2; max-width:370px; width:100%;" />
            </div>
        </div>
    </div>
</section>
